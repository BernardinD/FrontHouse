<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    tools:context=".MyAvailability">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:text="Day"/>
        <TextView
            android:id="@+id/title_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AM"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/title_Day"/>
        <TextView
            android:id="@+id/title_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/title_am"/>

        <LinearLayout
            android:id="@+id/shift1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/title_am"
            app:layout_constraintTop_toBottomOf="@id/title_Day">

            <TextView
                android:id="@+id/plus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_marginLeft="5dp"
                android:paddingHorizontal="3dp"
                />
            <TextView
                android:id="@+id/am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:layout_marginLeft="8dp"
                android:paddingHorizontal="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shift2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/title_pm"
            app:layout_constraintTop_toBottomOf="@id/title_am">

            <TextView
                android:id="@+id/plus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_marginLeft="5dp"
                android:paddingHorizontal="3dp"
                />
            <TextView
                android:id="@+id/pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:layout_marginLeft="8dp"
                android:paddingHorizontal="10dp"/>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>